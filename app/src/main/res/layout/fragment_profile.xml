<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Username & Logout button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:paddingBottom="16dp">
                <!-- Username -->
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/user_text" />
                <!-- Logout buttom -->
                <Button
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:id="@+id/btn_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout_text"
                    android:backgroundTint="#F8F8F8"
                    android:textColor="@android:color/black"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp"
                    app:cornerRadius="6dp" />
            </LinearLayout>

            <!-- Horizontal line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D8D6D6"/>

            <!-- User's added landmarks RecyclerView Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/profile_your_added_landmarks_text"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingBottom="12dp"/>

                <!-- RecyclerView for Landmarks -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_landmarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="16dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/recycler_view_item" />

                <!-- No Landmarks Found Message -->
                <TextView
                    android:id="@+id/tv_no_landmarks_found"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/user_has_not_added_landmarks"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:gravity="center"
                    tools:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>